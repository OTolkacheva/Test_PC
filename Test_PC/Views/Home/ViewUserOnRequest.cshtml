@model Test_PC.Models.SearchByRequest
@{
    ViewBag.Title = "Поиск пользователя по запросу";
}

@using (Ajax.BeginForm("GetUserOnRequest", new AjaxOptions { UpdateTargetId = "continerfortable" }))
{
    <div class="form-group row">
        <div class="col-5">
            <div class="form-check">
                @Html.CheckBoxFor(x => x.NeedName, new { @class = "form-check-input", @onclick = "Check()" })
                @Html.LabelFor(x => x.NeedName, new { @class = "form-check-label" })
            </div>
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(x => x.Name, new { @class = "col-1 form-check-label" })
        <div class="col-3">
            @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @disabled = true })
        </div>
    </div>
    <label>Введите запрос для поиска: </label>
    <div class="form-inline">
        @Html.DropDownListFor(x => x.RequestId, Model.SelectList, "Выберете запрос", new { @class = "custom-select" })
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Найти</button>
    </div>
}
<p></p>
<div id="continerfortable"></div>

<script>
    function Check() {
        if ($("#NeedName").is(":checked")) {
            $("#Name").attr("disabled", false);
        }
        else {
            $("#Name").attr("disabled", true);
        }
    }
</script>