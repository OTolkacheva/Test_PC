@model Test_PC.Models.ViewDate
@{
    ViewBag.Title = "Выполненные запросы";
}

@using (Ajax.BeginForm("GetDoneRequest", new AjaxOptions { UpdateTargetId = "continerfortable" }))
{
    <div class="form-group row">
        <div class="col-5">
            <div class="form-check">
                @Html.CheckBoxFor(x => x.NeedDate, new { @class = "form-check-input", @onclick = "Check()"})
                @Html.LabelFor(x => x.NeedDate, new { @class = "form-check-label" })
            </div>
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(x => x.StartDate, new { @class = "col-2 col-form-label" })
        <div class="col-3">
            @Html.TextBoxFor(x => x.StartDate, new { @class = "form-control", @type = "date", @disabled = true })
        </div>
        @Html.LabelFor(x => x.FinalDate, new { @class = "col-2 col-form-label" })
        <div class="col-3">
            @Html.TextBoxFor(x => x.FinalDate, new { @class = "form-control", @type = "date", @disabled = true })
        </div>
    </div>
    <button id="btn" class="btn btn-outline-success">Вывести</button>
}
<p></p>
<div id="continerfortable">
    @Html.Action("GetDoneRequest")
</div>

<script>
    function Check() {
        console.log("fgdg");
        if ($("#NeedDate").is(":checked")) {
            $("#StartDate").attr("disabled", false);
            $("#FinalDate").attr("disabled", false);
        }
        else {
            $("#StartDate").attr("disabled", true);
            $("#FinalDate").attr("disabled", true);
        }
    }
</script>