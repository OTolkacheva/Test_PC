@model Test_PC.Models.ViewSearchUser
@{
    ViewBag.Title = "Все пользователи";
}

@using (Ajax.BeginForm("GetAllUsers", new AjaxOptions { UpdateTargetId = "continerfortable" }))
{
    <div class="form-group row">
        <div class="col-5">
            <div class="form-check">
                @Html.CheckBoxFor(x => x.NeedName, new { @class = "form-check-input", @onclick = "Check()" })
                @Html.LabelFor(x => x.NeedName, new { @class = "form-check-label" })
            </div>
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(x => x.Name, new { @class = "col-1 form-check-label" })
        <div class="col-3">
            @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @disabled = true })
        </div>
    </div>
    <button id="btn" class="btn btn-outline-success">Вывести</button>
}
<p></p>
<div id="continerfortable">
    @Html.Action("GetAllUsers")
</div>

<script>
    function Check() {
        if ($("#NeedName").is(":checked")) {
            $("#Name").attr("disabled", false);
        }
        else {
            $("#Name").attr("disabled", true);
        }
    }
</script>